{
	"name": "@gdscnits/dts",
	"version": "1.0.0",
	"description": "Convert DOM Node to SVG",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"test": "pnpm build && mocha ./tests/test.js",
		"prepare": "pnpm simple-git-hooks",
		"esbuild": "pnpm run build && node esbuild.config.mjs",
		"build": "tsc",
		"docs": "pnpm run build && jsdoc -c jsdoc.conf.json",
		"pretty": "prettier --write .",
		"lint": "tsc --noEmit && eslint . --ext .ts --fix",
		"prepublish": "pnpm esbuild"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm run pretty && pnpm run lint"
	},
	"keywords": [
		"domToSVG",
		"dts",
		"d2s"
	],
	"types": "./types/index.d.ts",
	"author": "GDSC NITS <gdsc@nits.ac.in>",
	"contributors": [
		"Jaydeep Das <jaydeepjd.8914@gmail.com>",
		"Saurav Pal <palsaurav.2020@gmail.com>"
	],
	"license": "GPL-3.0",
	"devDependencies": {
		"@types/node": "^18.11.18",
		"@typescript-eslint/eslint-plugin": "^5.49.0",
		"@typescript-eslint/parser": "^5.49.0",
		"chai": "^4.3.7",
		"esbuild": "^0.17.5",
		"eslint": "^8.33.0",
		"jsdoc": "^4.0.0",
		"jsdom": "^21.1.0",
		"mocha": "^10.2.0",
		"prettier": "^2.8.3",
		"simple-git-hooks": "^2.8.1",
		"ts-node": "^10.9.1",
		"tslib": "^2.5.0",
		"typescript": "^4.9.4"
	},
	"files": [
		"dist/index.js",
		"types"
	]
}
